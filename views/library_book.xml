<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Accion -->
<record id='library_book_action' model='ir.actions.act_window'>
    <field name="name">Library Books</field>
    <field name="res_model">library.book</field>
    <field name="view_mode">tree,form</field>
</record>

<!-- Menu -->
<menuitem name="My Library" id="library_base_menu" />
<menuitem name="Books" id="library_book_menu" parent="library_base_menu" action="library_book_action"/>

    <!-- Vista Formulario -->
<record id="library_book_view_form" model="ir.ui.view">
<field name="name">Library Book Form</field>
<field name="model">library.book</field>
<field name="arch" type="xml">
    <form>
        <header>
            <button name="change_release_date" string="Update Date" type="object"/>
            <button name="make_available" string="Make Available" type="object" class="oe_highlight" />
            <button name="make_borrowed" string="Make Borrowed" type="object" class="oe_highlight" />
            <button name="make_lost" string="Make Lost" type="object"/>
            <button name="log_all_library_members"  string="Log Members" type="object"/>
            <field name="state" widget="statusbar" statusbar_colors='{"borrowed":"red","draft":"blue"}' />

        </header>
        <sheet>
            <group>
                <group>
                    <field name="name"/>
                     <field name="short_name"/>
                     <field name="pages"/>
                    <field name="notes"/>
                    <field name="cost_price"/>
                    <field name="currency_id"/>
                    <field name="retail_price"/>
                    <field name="age_days"/>

                </group>
                <group>
                    <field name="date_release"/>
                    <field name="author_ids"  widget="many2many_tags"/>
                    <field name="date_updated"/>
                    <field name="cover" widget="image" class="oe_avatar"/>
                    <field name="reader_rating"/>
                    <field name="publisher_id"/>
                    <field name="publisher_city"/>
                    <field name="category_id"/>
                </group>
            </group>
            <group>
                <group>
                      <field name="description"/>
                </group>
                <group>
                      <field name="ref_doc_id"/>
                </group>
            </group>
        </sheet>
    </form>
</field>
</record>

    <!-- lista previa o trabajar con -->
<record id="library_book_view_tree" model="ir.ui.view">
  <field name="name">Library Book List</field>
  <field name="model">library.book</field>
  <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="date_release"/>

        </tree>
  </field>
</record>

    <!-- campos de busqueda y filtros -->
<record id="library_book_view_search" model="ir.ui.view">
   <field name="name">Library Book Search</field>
   <field name="model">library.book</field>
    <field name="arch" type="xml">
        <search>
          <field name="name"/>
          <field name="author_ids"/>
          <filter string="No Authors" name="without_author" domain="[('author_ids','=',False)]"/>
        </search>
    </field>
</record>
</odoo>