<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Accion -->
    <record id='library_book_categ_action' model='ir.actions.act_window'>
        <field name="name">library.book.category</field>
        <field name="res_model">library.book.category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->

    <menuitem name="Category" id="library_book_Categ_menu" parent="library_base_menu" action="library_book_categ_action"/>

    <record id="library_book_categ_view_form" model="ir.ui.view">
        <field name="name">library.book.category</field>
        <field name="model">library.book.category</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="create_categories" string="Create Categories" type="object"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                             <field name="parent_id"/>
                            <field name="child_ids"/>

                        </group>
                        <group>
                            <field name="parent_path"/>
                            <field name="date_release"/>
                            <field name="date_updated"/>
                        </group>
                    </group>
                 </sheet>
            </form>
        </field>
    </record>

    <!-- lista previa o trabajar con -->
    <record id="library_book_categ_view_tree" model="ir.ui.view">
      <field name="name">library.book.category</field>
      <field name="model">library.book.category</field>
      <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="parent_id"/>
                <field name="date_release"/>
            </tree>
      </field>
    </record>

    <!-- campos de busqueda y filtros -->
    <record id="library_book_categ_view_search" model="ir.ui.view">
       <field name="name">library.book.category</field>
       <field name="model">library.book.category</field>
        <field name="arch" type="xml">
            <search>
              <field name="name"/>
              <field name="parent_id"/>
            </search>
        </field>
    </record>
</odoo>